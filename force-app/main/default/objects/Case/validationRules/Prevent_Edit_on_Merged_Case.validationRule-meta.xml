<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Edit_on_Merged_Case</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL( Status, &apos;Merged&apos; ) &amp;&amp; NOT( ISCHANGED ( Status ) ) &amp;&amp; $UserRole.Name &lt;&gt; &apos;Administrator&apos;</errorConditionFormula>
    <errorMessage>This case has been merged and is no longer editable.</errorMessage>
</ValidationRule>
